{
  "name": "graphql-prisma-starter",
  "version": "1.0.0",
  "description": "A starter project to build awesome application with typescript",
  "main": "build/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tecogill/ts-starter.git"
  },
  "private": false,
  "scripts": {
    "start": "env-cmd -f env/dev.env nodemon -e graphql,ts --exec 'ts-node' ./app/index.ts",
    "get-schema": "graphql get-schema -p prisma --dotenv env/dev.env",
    "test": "env-cmd env/test.env jest --watch --runInBand",
    "lint": "tslint --project tsconfig.json",
    "prod": "tsc && node ./build/index.js"
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "env-cmd": "^10.0.1",
    "graphql-cli": "^3.0.14",
    "graphql-import": "^0.7.1",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.0",
    "prisma-binding": "^2.3.16",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/yup": "^0.26.24",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.42",
    "tslint-config-airbnb": "^5.11.1"
  }
}
