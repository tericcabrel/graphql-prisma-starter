type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  updated_at: DateTime!
  created_at: DateTime!
}

type Task {
    id: ID! @id
    title: String!
    description: String!
    date: DateTime!
    status: String! @default(value: "PENDING")
    is_important: Boolean! @default(value: false)
    updated_at: DateTime! @createdAt
    created_at: DateTime! @updatedAt
}
